# Database Configuration (Supabase local)
DATABASE_URL=jdbc:postgresql://localhost:54322/postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# Supabase JWT Secret
# For LOCAL development, use the default Supabase local secret:
# SUPABASE_JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long
#
# For PRODUCTION, get the JWT secret from your Supabase dashboard:
# 1. Go to https://app.supabase.com/project/YOUR_PROJECT/settings/api
# 2. Copy the "JWT Secret" value
SUPABASE_JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long

# Server Configuration
PORT=3001
HOST=localhost

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Logging
LOG_LEVEL=INFO
SHOW_SQL=false

# Environment
SPRING_PROFILES_ACTIVE=development
